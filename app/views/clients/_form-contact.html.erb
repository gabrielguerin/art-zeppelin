<%= form_with(model: @client, local: true, class: 'w-50', style: 'max-width: 300px;') do |form| %>
  <% if @client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>
      <ul>
        <% @client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class='form-group'>
    <%= form.text_field :first_name, class: 'form-control', placeholder: 'Prénom' %>
  </div>
  <div class='form-group'>
    <%= form.text_field :last_name, class: 'form-control', placeholder: 'Nom' %>
  </div>
  <div class='form-group'>
    <%= form.text_field :email, class: 'form-control', placeholder: 'Email' %>
  </div>
  <div class='form-group'>
    <%= form.text_area :comment, class: 'form-control text', placeholder: 'Écrivez-nous, nous vous répondrons dans les 24h qui suivent.' %>
  </div>
  <%= form.submit 'Envoyer', class: 'btn btn-primary' %>
<% end %>
