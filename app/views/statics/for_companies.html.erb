<script>
    const detailsBtn = document.querySelector('.for-steps-btn');
    const pictosCtn = document.querySelector('.picto-main-ctn');
    const pictosText = document.querySelectorAll('.for-p-picto');
    var revealed = false;

    function revealPictos() {
        if (revealed == false) {
            pictosCtn.style.display = 'block';
            for (let i = 0; i < pictosText.length; i++) {
                pictosText[i].style.display = 'flex';
            }
            detailsBtn.innerHTML = 'Réduire';
            revealed = !revealed; 
        } else {
            pictosCtn.style.display = 'flex';
            for (let i = 0; i < pictosText.length; i++) {
                pictosText[i].style.display = 'none';
            }
            detailsBtn.innerHTML = 'Détails des étapes';
            revealed = !revealed; 
        }
    }
    detailsBtn.addEventListener('click', revealPictos) 

</script>