<!DOCTYPE html>
<html>
  <head>
    <title>ArtZeppelin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css?family=DM+Serif+Text|Domine|Libre+Baskerville|Playfair+Display+SC&display=swap" rel="stylesheet">
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to(root_path, class: "navbar-brand navlink-logo-ctn") do %>
        <% image_tag("logo-art-zeppelin.svg", alt: "logo-art-zeppelin", class: "navbar-logo") %>
      <% end %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarColor03">
        <ul class="navbar-nav">
          <li class="dropdown nav-item">
            <a class="nav-link dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Offres
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= link_to "Pour les artistes", statics_forartists_path, :class => "dropdown-item"%>
              <%= link_to "Pour les entreprises", statics_forcompanies_path, :class => "dropdown-item"%>
            </div>
          </li>
          <li class="nav-item">
            <%= link_to "RÃ©alisations", artworks_path, :class => "nav-link"%>
          </li>
          <li class="nav-item">
          <%= link_to "Artistes", artists_path, :class => "nav-link"%>
          </li>
          <li class="nav-item">
          <%= link_to "Articles", blogs_path, :class => "nav-link"%>
          </li>
          <li class="nav-item">
          <%= link_to "Contact - FAQ", statics_contact_path, :class => "nav-link"%>
          </li>
        </ul>
      </div>
    </nav>

    <div class="navbar-placeholder"></div>

    <%= yield %>


    <footer>
    </footer>  

