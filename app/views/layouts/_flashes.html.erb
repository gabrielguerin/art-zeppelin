<% if alert %>
  <div class="alert alert-error">
    <a class="close" data-dismiss="alert">&times;</a>
    <i class="fas fa-exclamation-triangle"></i> <%= alert %>
  </div>
<% end %>
<% if notice %>
  <div class="alert alert-warning">
    <a class="close" data-dismiss="alert">&times;</a>
    <i class="fas fa-info-circle"></i> <%= notice %>
  </div>
<% end %>
